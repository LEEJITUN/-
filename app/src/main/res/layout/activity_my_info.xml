<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/jalnanotf"
                        android:gravity="center_horizontal"
                        android:text="내정보"
                        android:textColor="@color/down_black"
                        android:textSize="20dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/mainbox_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar"
                    app:layout_constraintVertical_bias="0.0">

                    <!-- 이미지뷰 -> 나중에 변경 (프로필 추가) -->
                    <ImageView
                        android:id="@+id/myProfile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/ic_baseline_person_24" />

                    <!-- 텍스트 뷰 - 내 이름 -->
                    <TextView
                        android:id="@+id/myName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/jalnan"
                        android:text="류수민"
                        android:textColor="@color/down_black"
                        android:textSize="20dp" />

                    <!-- 이미지 뷰 - 아이콘 생성 -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="80dp"
                        android:src="@drawable/ic_baseline_phone_24" />

                    <!-- 텍스트 뷰 - 전화번호 -->
                    <TextView
                        android:id="@+id/inputPhoneNum"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="180dp"
                        android:layout_marginTop="80dp"
                        android:fontFamily="@font/jalnan"
                        android:text="01012341234"
                        android:textSize="15dp" />

                    <!-- 이미지 뷰 - 아이콘 생성  -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="105dp"
                        android:src="@drawable/ic_baseline_email_24" />

                    <!-- 텍스트 뷰 - 이메일 -->
                    <TextView
                        android:id="@+id/inputEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="180dp"
                        android:layout_marginTop="105dp"
                        android:fontFamily="@font/jalnan"
                        android:text="000000@naver.com"
                        android:textSize="15dp" />

                </RelativeLayout>

                <!-- 뷰 - 일자 선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#DCDADA"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="150dp"
                    tools:layout_editor_absoluteY="220dp" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/down_gray"
                    android:fontFamily="@font/jalnan"
                    android:gravity="center"
                    android:text="설정"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnNfc"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/ic_baseline_nfc_24"
                        android:drawablePadding="2dp"
                        android:fontFamily="@font/jalnan"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:text=" NFC 등록"
                        android:textColor="@color/down_black"
                        android:textSize="15sp" />
                    <View
                        android:id="@+id/view0"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="57dp"
                        android:background="#DCDADA" />

                    <Button
                        android:id="@+id/btnPwchange"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="58dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/ic_baseline_enhanced_encryption_24"
                        android:drawablePadding="2dp"
                        android:fontFamily="@font/jalnan"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:text=" 비밀번호 변경"
                        android:textColor="@color/down_black"
                        android:textSize="15sp" />


                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="57dp"
                        android:background="#DCDADA" />


                    <Button
                        android:id="@+id/btnWithdrawal"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="116dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/ic_baseline_delete_24"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/jalnan"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:text="회원탈퇴"
                        android:textColor="@color/down_black"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="114dp"
                        android:layout_marginEnd="0dp"
                        android:background="#DCDADA" />

                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="174dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/ic_baseline_logout_24"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/jalnan"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="로그아웃"
                        android:textColor="@color/down_black"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="172dp"
                        android:layout_marginEnd="0dp"
                        android:background="#DCDADA" />

                    <!-- 뷰 - 일자 선 -->

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#DCDADA"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="150dp"
                    tools:layout_editor_absoluteY="220dp" />

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/mainColor"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:weightSum="5"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/homeTap"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/homebe" />

            <ImageView
                android:id="@+id/tipTap"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/calbe" />

            <ImageView
                android:id="@+id/talkTap"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/whishbe" />

            <ImageView
                android:id="@+id/storeTap"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/mypage" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>