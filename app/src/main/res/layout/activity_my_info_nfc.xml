            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="255dp"
                android:layout_marginTop="150dp"
                android:fontFamily="@font/jalnanotf"
                android:text="하세요"
                android:textSize="15dp"
